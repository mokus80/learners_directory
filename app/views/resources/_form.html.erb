<%= form_for(@resource) do |f| %>
  
<%= render 'layouts/error_messages' %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, :size => "30x10" %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>

  
  <h4>Select categories:</h4>
  <% @tags.each do |tag| %>
    <div class="myCheckbox">
      <%= check_box_tag 'resource[tag_names][]', tag.name, (@resource.tags.any? { |t|
          t.name == tag.name}), :class => "checkbox" %>
    <div class="tag-label"><%= tag.name %></div> 
    </div>

    <% end %>
  <br>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
